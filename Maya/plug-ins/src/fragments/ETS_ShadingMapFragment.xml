<fragment  uiName="ETS_ShadingMapFragment" name="ETS_ShadingMapFragment" type="plumbing" class="ScriptFragment" version="1.0" feature_level="20" >
    <description>
<![CDATA[
Toon renderer. Uses pre-processed shade map to render the final shading color.]]>
</description>
    <properties>
        <float3  name="NormalMap" />
        <float  name="ShadeThreshold" />
        <float  name="DiffuseSmoothness" />
    </properties>
    <values>
<float name="ShadeThreshold" value="0.500000"  />
<float name="DiffuseSmoothness" value="0.400000"  />
    </values>
    <outputs>
        <float  name="output" />
    </outputs>
    <parametershare>
    </parametershare>
    <implementation render="OGS" language="ScriptInterpreter" version="0.1" >
        <scriptCommands>
            <SetEffect name="ShadingMap2Tones" path="EditableShadingMap" technique="TwoTones" />
            <SetEffectParameter effect="ShadingMap2Tones" name="NormalMap" value="@NormalMap" />
            <SetEffectParameter effect="ShadingMap2Tones" name="ShadeThreshold" value="@ShadeThreshold" />
            <SetEffectParameter effect="ShadingMap2Tones" name="DiffuseSmoothness" value="@DiffuseSmoothness" />
        </scriptCommands>
    </implementation>
</fragment>

