<fragment  uiName="ETS_ToonFragment" name="ETS_ToonFragment" type="plumbing" class="ScriptFragment" version="1.0" feature_level="20" >
    <description>
<![CDATA[
Toon renderer. Uses pre-processed shade map to render the final shading color.]]>
</description>
    <properties>
        <float3  name="BaseColor" />
        <float  name="Diffuse" />
        <float  name="ShadeIntensityRatio" />
        <bool  name="LinearSpaceLighting" />
    </properties>
    <values>
<float name="ShadeIntensityRatio" value="0.200000"  />
<bool name="LinearSpaceLighting" value="true"  />
    </values>
    <outputs>
        <float4  name="output" />
    </outputs>
    <parametershare>
    </parametershare>
    <implementation render="OGS" language="ScriptInterpreter" version="0.1" >
        <scriptCommands>
            <SetEffect name="EditableToonShader" path="EditableToonShader" technique="TwoTones" />
            <SetEffectParameter effect="EditableToonShader" name="BaseColor" value="@BaseColor" />
            <SetEffectParameter effect="EditableToonShader" name="ShadeIntensityRatio" value="@ShadeIntensityRatio" />
            <SetEffectParameter effect="EditableToonShader" name="LinearSpaceLighting" value="@LinearSpaceLighting" />
            <SetEffectParameter effect="EditableToonShader" name="Diffuse" value="@Diffuse" />
            <SetEffectParameter effect="EditableToonShader" name="shadingMapSamp" value="PointClamp" />
        </scriptCommands>
    </implementation>
</fragment>

